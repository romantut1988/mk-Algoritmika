body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    color: #000000;
    background-color: #602b7a;
    /**/
    -webkit-touch-callout: none;
    /* iOS Safari */
    -webkit-user-select: none;
    /* Chrome/Safari/Opera */
    -khtml-user-select: none;
    /* Konqueror */
    -moz-user-select: none;
    /* Firefox */
    -ms-user-select: none;
    /* Internet Explorer/Edge */
    user-select: none;
    /* Non-prefixed version, currently
    not supported by any browser */
}

header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    text-align: center;
}
header div {
    display: inline-block;
    height: 50px;
    padding: 25px 5px;
    font-size: 40px;
}
header img, header nav {
    height: 60px;
    padding: 20px 5px;
    vertical-align: bottom;
}
header nav, header ul, header li, header a {
	display: inline-block;
}
header ul {
	margin: 0;
    padding: 0;
}
header li {
    list-style-type: none;
}
header a {
	position: relative;
	top: 0;
	box-sizing: border-box;
    height: 50px;
    padding: 8px 24px;
    margin: 5px;
    text-decoration: none;
    font-size: 32px;
	transition: all .6s;
}
header .button-0 {
	border-radius: 0;
}
header .button-1 {
	border-radius: 5px;
}
header .button-2 {
	border-radius: 15px;
}
header .button-3 {
	border-radius: 30px;
}
header .hover-1:hover {
	filter: hue-rotate(90deg);
}
header .hover-2:hover {
	top: -6px;
}
header .hover-3:hover {
	top: -6px;
	filter: hue-rotate(90deg);
}

main {
    max-width: 800px;
    margin: 120px auto 40px;
}

main img {
	width: 300px;
	height: auto;
}
main .full-width {
	display: block;
	margin: 0 auto;
}
main .float-left {
	float: left;
	margin-left: 30px;
}
main .float-right {
	float: right;
	margin-right: 30px
}

footer {
    position: fixed;
    box-sizing: border-box;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30px;
    padding: 5px;
    text-align: center;
    font-size: 16px;
	font-weight: 700;
}

